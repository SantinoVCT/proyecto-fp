{% extends 'base.html.twig' %}

{% block title %}Categoria
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-dark py-4">
		<div class="container mx-auto px-2">
			<h1 class="text-6xl text-white text-center">
				Categoria:
				{{ categorium.nombre }}
			</h1>
		</div>
	</div>

	<div class="container mx-auto px-4 py-8">
		<div class="table-responsive bg-white rounded shadow relative p-2 my-4">
			<table class="table border-separate border-spacing-3">
				<tbody>
					<tr>
						<th class="w-25">Id</th>
						<td>{{ categorium.id }}</td>
					</tr>
					<tr>
						<th class="w-25">Nombre</th>
						<td>{{ categorium.Nombre }}</td>
					</tr>
				</tbody>
			</table>
			<div class="row g-3 justify-content-center">
				<a href="{{ path('app_categoria_index') }}" class="btn btn-info mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					<i class="fas fa-eye"></i>
					Back to the list
				</a>
				<a href="{{path('app_categoria_edit', {id: categorium.id})}}" class="btn btn-warning mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					<i class="fas fa-edit"></i>
					Edit
				</a>
				<form method="post" action="{{ path('app_categoria_delete', {'id': categorium.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorium.id) }}">
					<button class="btn">Delete</button>
				</form>

			</div>
		</div>
	</div>
{% endblock %}
