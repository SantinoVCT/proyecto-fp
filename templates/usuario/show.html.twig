{% extends 'base.html.twig' %}

{% block title %}Usuario
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-dark py-4">
		<div class="container mx-auto px-2">
			<h1 class="text-6xl text-white text-center">
				Usuario:
				{{ usuario.Nombre }}
			</h1>
		</div>
	</div>

	<div class="container mx-auto px-4 py-8">
		<div class="table-responsive bg-white rounded shadow relative p-2 my-4">
			<table class="table border-separate border-spacing-3">
				<tbody>
					<tr>
						<th class="w-25">Id</th>
						<td>{{ usuario.id }}</td>
					</tr>
					<tr>
						<th class="w-25">Nombre</th>
						<td>{{ usuario.Nombre }}</td>
					</tr>
					<tr>
						<th class="w-25">Apellidos</th>
						<td>{{ usuario.Apellidos }}</td>
					</tr>
					<tr>
						<th class="w-25">Password</th>
						<td>{{ usuario.Password }}</td>
					</tr>
					<tr>
						<th class="w-25">Email</th>
						<td>{{ usuario.Email }}</td>
					</tr>
					<tr>
						<th class="w-25">Rol</th>
						<td>{{ usuario.Roles[0] }}</td>
					</tr>
					<tr>
						<th class="w-25">Fecha Creado</th>
						<td>{{ usuario.FechaCreada.format('Y-m-d H:i:s') }}</td>
					</tr>
					<tr>
						<th class="w-25">Fecha Actualizado</th>
						{% if usuario.FechaUpdate %}
							<td>{{ usuario.FechaUpdate.format('Y-m-d H:i:s') }}</td>
							{% else %}
							<td>N/A</td>
						{% endif %}
					</tr>
				</tbody>
			</table>
			<div class="row g-3 justify-content-center">
				<a href="{{ path('app_usuario_index') }}" class="btn btn-info mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					Back to the list
				</a>
				<a href="{{path('app_usuario_edit', {id: usuario.id})}}" class="btn btn-warning mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					Edit
				</a>
				<form method="post" action="{{ path('app_usuario_delete', {'id': usuario.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.id) }}">
					<button class="btn">Delete</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
