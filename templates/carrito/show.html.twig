{% extends 'base.html.twig' %}

{% block title %}Info. del Carrito de {{ carrito.Usuario.nombre }}. Producto: {{ carrito.Producto.nombre }}
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-dark py-4">
		<div class="container mx-auto px-2">
			<h1 class="text-6xl text-white text-center">
				Carrito de
				{{ carrito.Usuario.nombre }}. Producto:
				{{ carrito.Producto.nombre }}
			</h1>
		</div>
	</div>

	<div class="container mx-auto px-4 py-8">
		<div class="table-responsive bg-white rounded shadow relative p-2 my-4">
			<table class="table border-separate border-spacing-3">
				<tbody>
					<tr>
						<th class="w-25">Id</th>
						<td>{{ carrito.id }}</td>
					</tr>
					<tr>
						<th class="w-25">Producto</th>
						<td>{{ carrito.Producto.nombre }}</td>
					</tr>
					<tr>
						<th class="w-25">Cliente</th>
						<td>{{ carrito.Usuario.nombre }}</td>
					</tr>
					<tr>
						<th class="w-25">Cantidad</th>
						<td>{{ carrito.Cantidad }}</td>
					</tr>
				</tbody>
			</table>
			<div class="row g-3 justify-content-center">
				<a href="{{ path('app_carrito_index') }}" class="btn btn-info mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					Volver
				</a>
				<a href="{{path('app_carrito_edit', {id: carrito.id})}}" class="btn btn-warning mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					Editar
				</a>
				<form method="post" action="{{ path('app_carrito_delete', {'id': carrito.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carrito.id) }}">
					<button class="btn">Borrar</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
