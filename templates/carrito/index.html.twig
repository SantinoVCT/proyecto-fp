{% extends 'base.html.twig' %}

{% block title %}Carrito index
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-dark py-4">
		<div class="container mx-auto px-4">
			<h1 class="text-6xl text-white text-center">
				Carrito
			</h1>
		</div>
	</div>
	{# Este bloque es para el mensaje de error #}
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="bg-white rounded shadow overflow-hidden relative">
				<div class="px-6 py-4 mb-2">
					<p class="text-gray-700 text-base">
						{{ message }}
					</p>
				</div>
			</div>
		{% endfor %}
	{% endfor %}

	<div class="container mx-auto px-4 py-8">
		{% if carritos is empty%}
			<div class="bg-white rounded shadow overflow-hidden relative">
				<div class="px-6 py-4">
					<div class="font-bold text-xl mb-2">No users found</div>
					<p class="text-gray-700 text-base">
						There are no users in the database.
						<a href="{{ path('app_carrito_new') }}" class="text-blue-500">Add one</a>
					</p>
				</div>
			</div>

		{% else %}
			<div class="px-6 py-4">
				<a href="{{ path('app_carrito_new') }}" class="btn btn-primary px-4 py-2">Add One</a>
			</div>
			<div class="table-responsive bg-white rounded shadow relative p-2">
				<table class="table border-separate border-spacing-3 text-center">
					<thead>
						<tr class="border-dashed">
							<th>Id</th>
							<th>Producto</th>
							<th>Cliente</th>
							<th>Cantidad</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for carrito in carritos %}
							<tr>
								<td>{{ carrito.id }}</td>
								<td>{{ carrito.Producto.Nombre }}</td>
								<td>{{ carrito.Usuario.Nombre }}</td>
								<td>{{ carrito.Cantidad }}</td>
								<td>
									<div class="row g-3 justify-content-center">
											<a href="{{path('app_carrito_show', {id: carrito.id})}}" class="btn btn-info mx-2 w-25 col-12">
												<i class="fas fa-eye"></i>
												View
											</a>
											<a href="{{path('app_carrito_edit', {id: carrito.id})}}" class="btn btn-warning mx-2 w-25 col-12">
												<i class="fas fa-edit"></i>
												Edit
											</a>
											<form method="post" action="{{ path('app_carrito_delete', {'id': carrito.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mx-2 w-25 col-12">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carrito.id) }}">
												<button class="btn btn-danger w-100">Delete</button>
											</form>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% endif %}
	</div>
{% endblock %}
