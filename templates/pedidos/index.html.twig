{% extends 'base.html.twig' %}

{% block title %}Tabla Pedidos
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-dark py-4">
		<div class="container mx-auto px-4">
			<h1 class="text-6xl text-white text-center">
				Pedidos
			</h1>
		</div>
	</div>
	{# Este bloque es para el mensaje de error #}
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="bg-white rounded shadow overflow-hidden relative">
				<div class="px-6 py-4 mx-2">
					<p class="text-gray-700 text-base">
						{{ message }}
					</p>
				</div>
			</div>
		{% endfor %}
	{% endfor %}

	<div class="container mx-auto px-4 py-8">
		{% if pedidos is empty%}
			<div class="bg-white rounded shadow overflow-hidden relative">
				<div class="px-6 py-4">
					<div class="font-bold text-xl mx-2">No users found</div>
					<p class="text-gray-700 text-base">
						There are no users in the database.
						<a href="{{ path('app_pedidos_new') }}" class="text-blue-500">Add one</a>
					</p>
				</div>
			</div>

		{% else %}
			<div class="px-6 py-4">
				<a href="{{ path('app_pedidos_new') }}" class="btn btn-primary px-4 py-2">Add One +</a>
			</div>
			<div class="d-flex justify-content-center bg-white rounded shadow relative p-2">
				<table class="table-responsive border-separate border-spacing-3 w-100 text-center">
					<thead>
						<tr class="border-dashed">
							<th>Id</th>
							<th>Producto</th>
							<th>Cliente</th>
							<th>Cantidad</th>
							<th>Estado</th>
							<th>FechaPedido</th>
							<th>CodigoPedido</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for pedido in pedidos %}
							<tr>
								<td>{{ pedido.id }}</td>
								<td>{{ pedido.Producto.Nombre }}</td>
								<td>{{ pedido.Usuario.Nombre }}</td>
								<td>{{ pedido.Cantidad }}</td>
								<td>{{ pedido.Estado == 0 ? 'Preparando' : pedido.Estado == 1 ? 'En Reparto' : 'Enviado' }}</td>
								<td>{{ pedido.FechaPedido.format('Y-m-d') }}</td>
								<td>{{ pedido.CodigoPedido }}</td>
								<td>
									<div class="row g-3 justify-content-center">
										<a href="{{path('app_pedidos_show', {id: pedido.id})}}" class="btn btn-info col-1 mx-1 w-auto">
											<i class="fas fa-eye"></i>
										</a>
										<a href="{{path('app_pedidos_edit', {id: pedido.id})}}" class="btn btn-warning col-1 mx-1 w-auto">
											<i class="fas fa-edit"></i>
										</a>
										<form method="post" action="{{ path('app_pedidos_delete', {'id': pedido.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="col-1 mx-1">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pedido.id) }}">
											<button class="btn btn-danger w-auto">
												<i class="fas fa-trash"></i>
											</button>
										</form>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% endif %}
	</div>
{% endblock %}
