{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
<nav class="navbar navbar-dark bg-primary p-2">
    <div class="container-fluid m-3">
        <a class="navbar-brand" href="{{ path('app_index') }}">PC GAMING</a>
    </div>
</nav>
	<div class="container mx-auto px-4 py-8">
		<div class="flex items-center content-center justify-center">
			<div class=" bg-white rounded shadow  overflow-hidden relative px-5 py-3 m-5 w-full md:w-1/3">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}
					<h1 class="text-xl">Please sign in</h1>
					<label for="email">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="email" class="form-control block w-full px-4 py-2 mt-2 mb-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="email" required autofocus>
					<label for="password">Password</label>
					<input type="password" name="password" id="password" class="form-control block w-full px-4 py-2 mt-2 mb-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="current-password" required>
					<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

					{# <div class="checkbox mb-3">
						<label>
							<input class='m-1 size-5' type="checkbox" name="_remember_me">
							Remember me?
						</label>
					</div> #}

					<button class="btn btn-success my-2" type="submit">
						Sign in
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
