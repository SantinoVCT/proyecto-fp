{% extends 'base.html.twig' %}

{% block title %}Mis Pedidos
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-info py-4">
		<div class="container mx-auto px-4">
			<h1 class="text-6xl text-white text-center">
				Pedidos
			</h1>
		</div>
	</div>

	<main class="container mx-auto px-4 py-8 my-3">
		{% if pedidos is empty%}
			<div class="bg-white rounded shadow overflow-hidden relative">
				<div class="px-4 py-4">
					<div class="font-bold text-xl">No hay pedidos</div>
				</div>
			</div>

		{% else %}
		{# <div class="bg-white rounded shadow relative p-3">
			{{ include('index/iniciado/pedido/_form.html.twig') }}
		</div> #}
			<div class="d-flex justify-content-center bg-white rounded shadow relative p-2 my-3">
				<table class="table-responsive border-separate border-spacing-3 w-100 text-center">
					<thead>
						<tr class="border-dashed">
							<th>Producto</th>
							<th>Cantidad</th>
							<th>Precio Total</th>
							<th>Estado</th>
							<th>CodigoPedido</th>
							<th>Fecha Pedido</th>
						</tr>
					</thead>
					<tbody>
						{% for pedido in pedidos %}
							<tr>
								<td>{{ pedido.Producto.Nombre }}</td>
								<td>{{ pedido.Cantidad }}</td>
								<td>{{ pedido.Cantidad * pedido.Producto.Precio }}â‚¬</td>
								<td>{{ pedido.Estado == 0 ? 'Preparando' : pedido.Estado == 1 ? 'En Reparto' : 'Enviado' }}</td>
								<td>{{ pedido.CodigoPedido }}</td>
								<td>{{ pedido.FechaPedido.format('Y-m-d') }}</td>

							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% endif %}
	</main>
	{% include 'partials/footer.html.twig' %}
{% endblock %}
