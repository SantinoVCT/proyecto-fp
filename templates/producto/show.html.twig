{% extends 'base.html.twig' %}

{% block title %}Producto
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<div class="bg-dark py-4">
		<div class="container mx-auto px-2">
			<h1 class="text-6xl text-white text-center">
				Producto:
				{{ producto.Nombre }}
			</h1>
		</div>
	</div>

	<div class="container mx-auto px-4 py-8">
		<div class="table-responsive bg-white rounded shadow relative p-2 my-4">
			<table class="table border-separate border-spacing-3">
				<tbody>
					<tr>
						<th class="w-25">Id</th>
						<td>{{ producto.id }}</td>
					</tr>
					<tr>
						<th class="w-25">Nombre</th>
						<td>{{ producto.Nombre }}</td>
					</tr>
					<tr>
						<th class="w-25">Descripcion</th>
						<td>{{ producto.Descripcion }}</td>
					</tr>
					<tr>
						<th class="w-25">Caracteristicas</th>
						<td>{{ producto.Caracteristicas }}</td>
					</tr>
					<tr>
						<th class="w-25">Requisitos</th>
						{% if producto.Requisitos is empty%}
							<td>No hay requisitos</td>
						{% else %}
							<td>{{ producto.Requisitos }}</td>
						{% endif %}

					</tr>
					<tr>
						<th class="w-25">Disponible</th>
						<td>{{ producto.Disponible ? 'Yes' : 'No' }}</td>
					</tr>
					<tr>
						<th class="w-25">Precio</th>
						<td>{{ producto.Precio }}</td>
					</tr>
					<tr>
						<th class="w-25">Categoria</th>
						<td>{{ producto.Categoria.Nombre }}</td>
					</tr>
					<tr>
						<th class="w-25">Fecha Creado</th>
						<td>{{ producto.FechaCreada.format('Y-m-d H:i:s') }}</td>
					</tr>
					<tr>
						<th class="w-25">Fecha Actualizado</th>
						{% if producto.FechaUpdate %}
							<td>{{ producto.FechaUpdate.format('Y-m-d H:i:s') }}</td>
							{% else %}
							<td>N/A</td>
						{% endif %}
					</tr>
				</tbody>
			</table>
			<div class="row g-3 justify-content-center">
				<a href="{{ path('app_producto_index') }}" class="btn btn-info mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					Back to the list
				</a>
				<a href="{{path('app_producto_edit', {id: producto.id})}}" class="btn btn-warning mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					Edit
				</a>
				<form method="post" action="{{ path('app_producto_delete', {'id': producto.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger mx-2 col-12 col-sm-6 col-md-4 col-lg-2">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}">
					<button class="btn">Delete</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
