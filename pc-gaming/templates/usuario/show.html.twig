{% extends 'base.html.twig' %}

{% block title %}Usuario
{% endblock %}

{% block body %}
	<div class="bg-gray-900 py-16">
		<div class="container mx-auto px-2">
			<h1 class="text-6xl text-white text-center">
				Producto:
				{{ usuario.Nombre }}
			</h1>
		</div>
	</div>

	<div class="container mx-auto px-4 py-8">
		<div class="w-auto">
			<div class="bg-white rounded-lg shadow-lg  relative px-6 py-4">
				<table class="table border-separate border-spacing-3">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ usuario.id }}</td>
						</tr>
						<tr>
							<th>Nombre</th>
							<td>{{ usuario.Nombre }}</td>
						</tr>
						<tr>
							<th>Apellidos</th>
							<td>{{ usuario.Apellidos }}</td>
						</tr>
						<tr>
							<th>Password</th>
							<td>{{ usuario.Password }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ usuario.Email }}</td>
						</tr>
						<tr>
							<th>Rol</th>
							<td>{{ usuario.Roles[0] }}</td>
						</tr>
					</tbody>
					<div class="flex justify-center my-3">
						<div class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded-l">
							<a href="{{ path('app_usuario_index') }}" class="font-bold py-2 px-4">
								<i class="fas fa-eye"></i>
								Back to the list
							</a>
						</div>
						<div class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4">
							<a href="{{path('app_usuario_edit', {id: usuario.id})}}" class="font-bold py-2 px-4">
								<i class="fas fa-edit"></i>
								Edit
							</a>
						</div>
						<div class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-r">
							<form method="post" action="{{ path('app_usuario_delete', {'id': usuario.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.id) }}">
								<button class="btn">Delete</button>
							</form>
						</div>
					</div>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
