{% extends 'base.html.twig' %}

{% block title %}Usuario index
{% endblock %}

{% block body %}
	<h1>Usuario index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Apellidos</th>
				<th>Contraseña</th>
				<th>Email</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for usuario in usuarios %}
				<tr>
					<td>{{ usuario.id }}</td>
					<td>{{ usuario.Nombre }}</td>
					<td>{{ usuario.Apellidos }}</td>
					<td>{{ usuario.Contraseña }}</td>
					<td>{{ usuario.Email }}</td>
					<td>
						<a href="{{ path('app_usuario_show', {'id': usuario.id}) }}">show</a>
						<a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# Este bloque es para el mensaje de error #}
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }} mt-4">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

	<a href="{{ path('app_usuario_new') }}">Create new</a>
{% endblock %}
