{% extends 'base.html.twig' %}

{% block title %}Producto index
{% endblock %}

{% block body %}
	<h1>Producto index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Descripcion</th>
				<th>Caracteristicas</th>
				<th>Requisitos</th>
				<th>Disponible</th>
				<th>Precio</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for producto in productos %}
				<tr>
					<td>{{ producto.id }}</td>
					<td>{{ producto.Nombre }}</td>
					<td>{{ producto.Descripcion }}</td>
					<td>{{ producto.Caracteristicas }}</td>
					<td>{{ producto.Requisitos }}</td>
					<td>{{ producto.Disponible ? 'Yes' : 'No' }}</td>
					<td>{{ producto.Precio }}</td>
					<td>
						<a href="{{ path('app_producto_show', {'id': producto.id}) }}">show</a>
						<a href="{{ path('app_producto_edit', {'id': producto.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# Este bloque es para el mensaje de error #}
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }} mt-4">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}

	<a href="{{ path('app_producto_new') }}">Create new</a>
{% endblock %}
