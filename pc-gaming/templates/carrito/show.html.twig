{% extends 'base.html.twig' %}

{% block title %}Carrito
{% endblock %}

{% block body %}
	<div class="bg-gray-900 py-16">
		<div class="container mx-auto px-2">
			<h1 class="text-6xl text-white text-center">
				Carrito de
				{{ carrito.Usuario.nombre }}. Producto: {{ carrito.Producto.nombre }}
			</h1>
		</div>
	</div>

	<div class="container mx-auto px-4 py-8">
		<div class="w-auto">
			<div class="bg-white rounded-lg shadow-lg  relative px-6 py-4">
				<table class="table border-separate border-spacing-3">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ carrito.id }}</td>
						</tr>
						<tr>
							<th>Producto</th>
							<td>{{ carrito.Producto.nombre }}</td>
						</tr>
						<tr>
							<th>Cliente</th>
							<td>{{ carrito.Usuario.nombre }}</td>
						</tr>
						<tr>
							<th>Cantidad</th>
							<td>{{ carrito.Cantidad }}</td>
						</tr>
					</tbody>
					<div class="flex justify-center my-3">
						<div class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded-l">
							<a href="{{ path('app_carrito_index') }}" class="font-bold py-2 px-4">
								<i class="fas fa-eye"></i>
								Back to the list
							</a>
						</div>
						<div class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4">
							<a href="{{path('app_carrito_edit', {id: carrito.id})}}" class="font-bold py-2 px-4">
								<i class="fas fa-edit"></i>
								Edit
							</a>
						</div>
						<div class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-r">
							<form method="post" action="{{ path('app_carrito_delete', {'id': carrito.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carrito.id) }}">
								<button class="btn">Delete</button>
							</form>
						</div>
					</div>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
